<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console Appender -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Main File Appender -->
    <appender name="FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/logs/test-execution.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- API Logs File Appender -->
    <appender name="API_FILE" class="ch.qos.logback.core.FileAppender">
        <file>target/logs/api-requests.log</file>
        <append>false</append>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="INFO">
        <appender-ref ref="CONSOLE" />
        <appender-ref ref="FILE" />
    </root>

    <!-- API Request/Response Logger -->
    <logger name="com.booking.utils.RequestResponseLoggingFilter" level="DEBUG">
        <appender-ref ref="API_FILE" />
    </logger>
</configuration>
