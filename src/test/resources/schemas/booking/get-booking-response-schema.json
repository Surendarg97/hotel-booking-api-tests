{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": ["firstname", "lastname", "depositpaid", "bookingdates"],
    "properties": {
        "firstname": {
            "type": "string"
        },
        "lastname": {
            "type": "string"
        },
        "depositpaid": {
            "type": "boolean"
        },
        "bookingdates": {
            "type": "object",
            "required": ["checkin", "checkout"],
            "properties": {
                "checkin": {
                    "type": "string",
                    "format": "date"
                },
                "checkout": {
                    "type": "string",
                    "format": "date"
                }
            }
        },
        "email": {
            "type": "string",
            "format": "email"
        },
        "phone": {
            "type": "string"
        },
        "roomid": {
            "type": "integer"
        }
    }
}
